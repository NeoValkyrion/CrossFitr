<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use color -->
    <item android:drawable="@drawable/timer_icon_selected"
          android:state_selected="true" />
    <!-- When not enabled, use red enabled-->
    <item android:drawable="@drawable/timer_icon_disabled" 
          android:state_enabled="false" />
     <!-- When not selected, use black/white-->
    <item android:drawable="@drawable/timer_icon_unselected" 
          android:state_selected="false" />     
     
</selector>