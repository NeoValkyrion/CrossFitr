<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberPickerInputText" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NumberPickerUpButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/numberpicker_up_btn_holo_light</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerDownButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/numberpicker_down_btn_holo_light</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerInputText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/NumberPickerInputText</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/numberpicker_input</item>
    </style>

    <!-- screens' header text -->

    <style name="titleText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="workoutTypeTitleText">
        <item name="android:textSize">33sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- homescreen styles -->

    <style name="mainButtonText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">75dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="textButton">
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- timer styles -->
    <style name="finishButton">
        <item name="android:background">@drawable/finish_button</item>
    </style>
    
    <style name="setButton">
        <item name="android:background">@drawable/set_buttons_time</item>
    </style>
    
</resources>