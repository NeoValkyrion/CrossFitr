<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background_workouts"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/workout_profile_descDB"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="100dp"
        android:text="TODO: get description from DB"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_header"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/workout_profile_best_recordDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO: get best record from DB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/workout_profile_recordtypeDB"	
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TODO: get recordtype from DB" />

    <TextView
        android:id="@+id/workout_profile_nameDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO: get workout name from DB" />

    <Button
        android:id="@+id/button_begin_workout"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/begin_workout_clicked" />

</LinearLayout>