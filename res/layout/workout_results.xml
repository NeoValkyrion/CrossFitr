<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main"
    android:gravity="top"
    android:orientation="vertical" >
    
    <!-- crossfitr logo -->

    <ImageView
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/main_header" />
 
    <!-- screen title, workout type + thin red line -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="top" >

            <TextView
                android:id="@+id/screenTitle"
                style="@style/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout" />

            <TextView
                android:id="@+id/workout_profile_nameDB"
                style="@style/workoutTypeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/screenTitle" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/redLine" />
    </LinearLayout>
    
    <TextView
	    android:id="@+id/text_workout_name"
	    android:layout_alignParentTop="true"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="80dp"
	    android:layout_height="wrap_content"
	    android:text="A"
	    android:textSize="30dp"/>
    
    <LinearLayout
        android:id="@+id/score_header"
        android:layout_below="@+id/text_workout_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		        
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="30dp"
		        android:id="@+id/text_workout_record" 
		                   android:text="B"
		        android:textSize="20dp"/>
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="30dp"
		        android:id="@+id/text_session_score" 
		                   android:text="C"
		        android:textSize="20dp"/>
	</LinearLayout>

    <ScrollView
        android:id="@+id/text_workout_desc_scroll"
        android:layout_below="@+id/score_header"
        android:layout_above="@+id/commentfield"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
	    <TextView

	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="10dp"
	                   android:text="lolol"
	        android:id="@+id/text_workout_desc" />
	    </ScrollView>
	
	<LinearLayout
	    android:id="@+id/commentfield"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_bar">
		
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/comment_field_header" />    
		<EditText
	        android:id="@+id/results_comment_edittext_add"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:imeOptions="actionDone"
	        android:maxLines="5"/>
    </LinearLayout>
	
	<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01"
        android:orientation="horizontal" >

	    <Button
        android:id="@+id/button_results_save_workout"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:text="Save"
        android:textColor="@color/wod"
        android:textSize="20sp"
        android:textStyle="bold" />
	    
	    <Button
        android:id="@+id/button_results_dontsave_workout"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:text="Discard"
        android:textColor="@color/wod"
        android:textSize="20sp"
        android:textStyle="bold" />
	    
	    <Button
        android:id="@+id/button_results_share_workout_FB"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:text="Share"
        android:textColor="@color/wod"
        android:textSize="20sp"
        android:textStyle="bold" />	    

	</LinearLayout>

</LinearLayout>