<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/main_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:src="@drawable/main_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/workouts_title"
            style="@style/titleText"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="4"
            android:text="workouts" />


        <ImageView
            android:id="@+id/main_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/background_redbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/wod_button"
            style="@style/textButton"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_workoutlist_wods" 
            android:text="WOD"
            android:textColor="@color/wod" />

        <Button
            android:id="@+id/hero_button"
            style="@style/textButton"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_workoutlist_heroes" 
            android:text="Heroes"
            android:textColor="@color/heroes"/>

        <Button
            android:id="@+id/girl_button"
            style="@style/textButton"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_workoutlist_girls"
            android:text="Girls"
            android:textColor="@color/girls" />

        <Button
            android:id="@+id/custom_button"
            style="@style/textButton"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_workoutlist_custom"
            android:text= "Custom"
            android:textColor="@color/custom" />
    </LinearLayout>

</LinearLayout>