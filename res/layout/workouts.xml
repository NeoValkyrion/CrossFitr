<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/main_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:src="@drawable/main_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/workouts_title"
            style="@style/titleText"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="4" />

        <!--
             <ImageView
            android:id="@+id/main_header"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/text_workouts" />
        -->

        <ImageView
            android:id="@+id/main_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/background_redbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/wod_button"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_workoutlist_wods" />

        <Button
            android:id="@+id/hero_button"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_workoutlist_heroes" />

        <Button
            android:id="@+id/girl_button"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_workoutlist_girls" />

        <Button
            android:id="@+id/custom_button"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ic_workoutlist_custom" />
    </LinearLayout>

</LinearLayout>